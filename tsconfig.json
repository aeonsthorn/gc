{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false
  },
  "lib": ["es2015"],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/core/create/template/**/*",
    "template"
  ]
}
